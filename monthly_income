#include <iostream>
using namespace std;

int main()
{

	//Variable Declaration
	double employeeID;
	double RatePerHour;
	double HoursWorked; 
	double gross; 
	double taxes; 
	double net; 

	//Inputs
	cout << "Employee ID: "; 
	cin >> employeeID;
	cout << "Hours Worked: ";
	cin >> HoursWorked;
	cout << "Rate Per Hour: ";
	cin >> RatePerHour;

	//Processing 
	gross = RatePerHour * HoursWorked;
	taxes = gross * .2;
	net = gross - taxes;


	//Output Section
	cout << "Income Calculator" << endl;
	cout << "***********" << endl; 
	cout << "Employee ID:  " << employeeID << endl;
	cout << "Hours Worked: " << HoursWorked << endl; 
	cout << "Rate per Hour: " << RatePerHour << endl; 
	cout << "Gross Salary: " << gross << endl; 
	cout << "Taxes: " << taxes << endl; 
	cout << "Net Salary: " << net << endl; 
}
